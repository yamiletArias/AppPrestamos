<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemResumen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Número total de préstamos -->
    <TextView
        android:id="@+id/tvTotalPrestamos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de préstamos: 0"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <!-- Monto del contrato -->
    <TextView
        android:id="@+id/tvMontoContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto: S/ 0.00"
        android:paddingBottom="4dp" />

    <!-- Interés -->
    <TextView
        android:id="@+id/tvInteresContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interés: 0.00%"
        android:paddingBottom="4dp" />

    <!-- Fecha de inicio -->
    <TextView
        android:id="@+id/tvFechaInicioContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de inicio: 2025-01-01"
        android:paddingBottom="4dp" />

    <!-- Número de cuotas totales -->
    <TextView
        android:id="@+id/tvNumCuotasContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuotas: 12"
        android:paddingBottom="4dp" />

    <!-- Cuotas ya pagadas -->
    <TextView
        android:id="@+id/tvCuotasPagadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuotas pagadas: 2"
        android:paddingBottom="4dp" />

</LinearLayout>
